<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview_zadania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="114dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp" >
    </ListView>

    <Button
        android:id="@+id/btn_dodaj_zadanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="20dp"
        android:text="@string/dodaj_zadanie" />

    <Button
        android:id="@+id/btn_aktualizuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_dodaj_zadanie"
        android:layout_toRightOf="@+id/btn_dodaj_zadanie"
        android:text="@string/aktualizuj" />

</RelativeLayout>